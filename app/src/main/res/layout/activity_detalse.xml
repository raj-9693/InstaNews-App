<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".DerailsSecond_Activity.Detalse_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0D1B2A"
            android:padding="16dp">

            <!-- 🖼 News Image -->
            <ImageView
                android:id="@+id/newsImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#0D1B2A"

                android:contentDescription="News Image"
                android:scaleType="centerCrop" />

            <!-- 🧑 Author -->
            <TextView
                android:id="@+id/newsAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="By Author Name"
                android:textColor="#757575"
                android:textSize="14sp" />

            <!-- 📰 Title -->
            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="News Title Here"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        <!-- ✅ CardView at Bottom -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/white"
            android:elevation="4dp"
            app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/desion_card"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnSpeak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sound"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Speak Description" />
            <!-- 📝 Content -->
            <TextView
                android:id="@+id/newsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="12dp"
                android:text="News short content goes here..."
                android:textColor="#D7CACA"
                android:textSize="16sp" />

            <!-- 📄 Description -->
            <TextView
                android:id="@+id/newsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="6dp"
                android:padding="12dp"
                android:text="Full news description goes here. You can write paragraphs, explanation, details, etc."
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnMoreInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="More Information"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_gradient"
                android:backgroundTint="@null"
                android:padding="12dp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="20dp"

                app:iconGravity="textStart"
                app:iconPadding="8dp"
                />




        </LinearLayout>
        </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>